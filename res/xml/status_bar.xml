<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <PreferenceCategory
        android:layout="@layout/custom_preference_category2"
        android:title="@string/signal_category">
      
         <com.android.settings.custom.preference.SystemSettingSwitchPreference
            android:key="use_old_mobiletype"
            android:title="@string/use_old_mobiletype_title"
            android:summary="@string/use_old_mobiletype_summary"
            android:defaultValue="false" />  

         <com.android.settings.custom.preference.SystemSettingSwitchPreference
             android:key="show_fourg_icon"
             android:title="@string/show_fourg_icon_title"
             android:summary="@string/show_fourg_icon_summary"
             android:defaultValue="false"/>

   </PreferenceCategory>

        <com.android.settings.custom.preference.SecureSettingSwitchPreference
            android:key="show_combined_status_bar_signal_icons"
            android:title="@string/combined_status_bar_signal_icons"
            android:summary="@string/combined_status_bar_signal_icons_summary"
            android:defaultValue="false" />

        <com.android.settings.custom.preference.SecureSettingSwitchPreference
            android:key="enable_location_privacy_indicator"
            android:title="@string/location_privacy_title"
            android:summary="@string/location_privacy_summary"
            android:defaultValue="true" />

        <com.android.settings.custom.preference.SystemSettingSwitchPreference
            android:key="show_volte_icon"
            android:title="@string/volte_icon_title"
            android:summary="@string/volte_icon_summary"
            android:defaultValue="true" />

        <com.android.settings.custom.preference.SystemSettingSwitchPreference
            android:key="show_vowifi_icon"
            android:title="@string/vowifi_icon_title"
            android:summary="@string/vowifi_icon_summary"
            android:defaultValue="true" />

   <PreferenceCategory
	   android:key="statusbar_category"
	   android:layout="@layout/custom_preference_category2"
        android:title="@string/netindi_category">

    <Preference
            android:key="traffic"
            android:fragment="org.elixir.essence.fragments.Traffic"
            android:title="@string/traffic_title" />
   
   </PreferenceCategory>

   <PreferenceCategory
	   android:key="statusbar_gesture_category"
	   android:layout="@layout/custom_preference_category2"
        android:title="@string/statusbar_gesture_category">

         <com.android.settings.custom.preference.SystemSettingSwitchPreference
            android:key="double_tap_sleep_gesture"
            android:title="@string/double_tap_sleep_gesture_title"
            android:summary="@string/double_tap_sleep_gesture_summary"
            android:defaultValue="false" />

   </PreferenceCategory>

   <PreferenceCategory
	   android:layout="@layout/custom_preference_category2"
            android:title="@string/statusbar_clock">

              <Preference
	        android:fragment="org.elixir.essence.fragments.ClockOptions"
	        android:key="clock_options_category"
	        android:summary="@string/clock_options_summary"
	        android:title="@string/clock_options_title" />

    </PreferenceCategory>

   <PreferenceCategory
	   android:key="battery_style_category"
	   android:layout="@layout/custom_preference_category2"
        android:title="@string/battery_style_category_title" >

    <com.android.settings.custom.preference.SystemSettingListPreference
	    android:key="status_bar_battery_style"
            android:title="@string/status_bar_battery_style_title"
            android:summary="%s"
            android:dialogTitle="@string/status_bar_battery_style_title"
            android:entries="@array/status_bar_battery_style_entries"
            android:entryValues="@array/status_bar_battery_style_values"
            android:defaultValue="0" />

    <com.android.settings.custom.preference.SystemSettingListPreference
	    android:key="status_bar_show_battery_percent"
            android:title="@string/battery_percent_title"
            android:dialogTitle="@string/battery_percent_title"
            android:entries="@array/battery_percent_entries"
            android:entryValues="@array/battery_percent_values"
            android:defaultValue="0" />

    </PreferenceCategory>

</PreferenceScreen>
