<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:title="@string/media_category" 
        android:layout="@layout/custom_preference_category2">

        <com.android.settings.custom.preference.SystemSettingSwitchPreference
            android:key="artwork_media_background"
            android:title="@string/artwork_media_background_title"
            android:summary="@string/artwork_media_background_summary"
            android:defaultValue="false" />

        <com.android.settings.custom.preference.SystemSettingSeekBarPreference
            android:key="artwork_media_background_alpha"
            android:title="@string/artwork_media_background_alpha_title"
            android:dependency="artwork_media_background"
            android:defaultValue="255"
            android:max="255"
            android:min="0" />

        <com.android.settings.custom.preference.SystemSettingSeekBarPreference
            android:key="artwork_media_fade_level"
            android:title="@string/artwork_media_fade_level_title"
            android:dependency="artwork_media_background"
            android:max="100"
            android:min="0"
            android:defaultValue="30" />
    </PreferenceCategory>

    <PreferenceCategory
	    android:key="quick_settings_brighness_category"
	    android:layout="@layout/custom_preference_category2"
        android:title="@string/qs_brightness_slider_category">

        <com.android.settings.custom.preference.SecureSettingSwitchPreference
            android:key="qs_show_brightness"
            android:title="@string/qs_brightness_slider_title"
            android:summary="@string/qs_brightness_slider_summary"
            android:defaultValue="true"/>

        <com.android.settings.custom.preference.SecureSettingSwitchPreference
            android:key="sysui_qqs_brightness_slider"
            android:title="@string/quick_qs_brightness_slider_title"
            android:summary="@string/quick_qs_brightness_slider_summary"
            android:dependency="qs_show_brightness"
            android:defaultValue="false"/>

        <com.android.settings.custom.preference.SecureSettingSwitchPreference
            android:key="qs_show_auto_brightness_button"
            android:title="@string/brightness_icon_title"
            android:summary="@string/brightness_icon_summary"
            android:defaultValue="true"
            android:dependency="qs_show_brightness"/>

        <com.android.settings.custom.preference.SecureSettingSwitchPreference
            android:key="qs_brightness_position_bottom"
            android:title="@string/qs_brightness_position_bottom_title"
            android:summary="@string/qs_brightness_position_bottom_summary"
            android:defaultValue="false"
            android:dependency="qs_show_brightness" />

    </PreferenceCategory>


   <PreferenceCategory
            android:layout="@layout/custom_preference_category2"
            android:title="@string/notification_material_dismiss_cat">

       <com.android.settings.custom.preference.SystemSettingSwitchPreference
            android:key="notification_material_dismiss"
            android:title="@string/notification_material_dismiss_title"
            android:summary="@string/notification_material_dismiss_summary"
            android:defaultValue="false" />

	<com.android.settings.custom.preference.SystemSettingSeekBarPreference
            android:key="notification_material_dismiss_style"
            android:title="@string/notification_material_dismiss_style_title"
            android:dependency="notification_material_dismiss"
            android:defaultValue="0"
            android:max="9"
            android:min="0" />

        <com.android.settings.custom.preference.SystemSettingSeekBarPreference
            android:key="notification_material_dismiss_bgstyle"
            android:title="@string/notification_material_dismiss_bgstyle_title"
            android:dependency="notification_material_dismiss"
            android:defaultValue="0"
            android:max="4"
            android:min="0" />

   </PreferenceCategory>

   <PreferenceCategory
           android:key="qs_category"
           android:layout="@layout/custom_preference_category2"
       android:title="@string/qs_tile_cat">

	<com.android.settings.custom.preference.SystemSettingSwitchPreference   
            android:key="qs_footer_data_usage"
            android:title="@string/qs_footer_datausage_title"
            android:summary="@string/qs_footer_datausage_summary"
            android:defaultValue="false" />

        <Preference
            android:key="qstiles"
	    android:summary="@string/qs_style_summary"	
	    android:fragment="org.elixir.essence.fragments.QSTiles"
            android:title="@string/qstiles_cust" />

        <com.android.settings.custom.preference.SecureSettingSwitchPreference
            android:key="quick_settings_vibrate"
            android:title="@string/quick_settings_vibrate_title"
            android:summary="@string/quick_settings_vibrate_summary"
            android:defaultValue="false"/>

        <com.android.settings.custom.preference.SecureSettingSwitchPreference
            android:key="enable_location_privacy_indicator"
            android:title="@string/location_privacy_title"
            android:summary="@string/location_privacy_summary"
            android:defaultValue="true" />

   </PreferenceCategory>

</PreferenceScreen>
